{
  "name": "__MSG_appName__",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "__MSG_appDescription__",
  "icons": {
    "16": "images/chubby.png",
    "128": "images/chubby.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": ["scripts/chromereload.js", "scripts/background.js"]
  },
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*",
    "topSites",
    "storage",
    "webNavigation",
    "declarativeContent",
    "activeTab"
  ],
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*",
        "https://ehrms.tmnewa.com.tw/ehrportal/index/*"
      ],
      "js": ["scripts/contentscript.js"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "page_action": {
    "default_icon": {
      "19": "images/chubby.png",
      "38": "images/chubby.png"
    },
    "default_popup": "popup.html"
  }
}
